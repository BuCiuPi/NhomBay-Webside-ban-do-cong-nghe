<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="nav-container">
        <div class="small-navbar">
            <a class="" href="@Url.Action("index", "Home")">CoralCivet</a>
            @Html.Partial("_LoginPartial")
        </div>
        <div class="nor-navbar">
            <div class="logo">
                <a href="@Url.Action("Index","Home")"><img src="~/Content/Image/logo.svg" alt="logo.svg" /></a>
            </div>
            <nav>
                <ul id="menu-items">
                    <li class="dropdown">
                        <a href="@Url.Action("index", "Product")"><b>PRODUCT</b></a>
                        <span class="caret-down"></span>
                        <div class="dropdown-content">
                            <span class="caret-up"></span>
                            <div class="dropdown-bg">
                                <div class="row">
                                    @{Html.RenderAction("ReturnHeaderCategory", "Home"); }
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="dropdown">
                        <a href="@Url.Action("Index","Brand")"><b>BRAND</b></a>
                        <span class="caret-down"></span>
                        <div class="dropdown-content">
                            <span class="caret-up @*border-debug*@"></span>
                            <div class="dropdown-bg">
                                <div class="row ">
                                    @{ Html.RenderAction("GetBrandList", "Brand");}
                                </div>
                            </div>
                        </div>
                    </li>

                    <li class="dropdown"><a href="@Url.Action("NewProduct","Product")"><b>NEW</b></a></li>
                </ul>
            </nav>
            <div class="find">
                <img src="~/Content/Image/find.svg" width="30" />
                <input type="text" />
            </div>
        </div>
    </div>

    @{ Html.RenderAction("GetCart", "Cart");}

    <div class="body-container body-margin">
        @RenderBody()
        <hr />
    </div>

    <div class="footer-container">
        <div class="row">
            <div class="footer-col-1">
                <h3>
                    Download Our App
                </h3>
                <p>
                    Download App for Androind and IOS mobile phone.
                </p>

                <div class="app-logo">
                    <img src="https://cdn.glitch.com/36a72c53-05c9-46a6-8c69-9703ced03b11%2Fplay-store.png?v=1623292340809">
                    <img src="https://cdn.glitch.com/36a72c53-05c9-46a6-8c69-9703ced03b11%2Fapp-store.png?v=1623292339145">
                </div>

            </div>

            <div class="footer-col-2">
                <img src="~/Content/Image/logo.svg" width="50">
                <p>
                    Buy what you <b style="color: white;">LIKE</b>,
                    <br />
                    <b style="color: white;">LIKE</b> what you Buy.
                </p>
            </div>

            <div class="footer-col-3">

                <ul>
                    <h3>
                        About us
                    </h3>
                    <li>Introduce</li>
                    <li>Address</li>
                    <li>Return Policy</li>
                    <li>Contact</li>
                </ul>

            </div>

            <div class="footer-col-4">

                <ul>
                    <h3>
                        Follow us
                    </h3>
                    <li>Facebook</li>
                    <li>Twitter</li>
                    <li>Instagram</li>
                    <li>Youtube</li>
                </ul>

            </div>

        </div>
        <hr>
        <p class="copyright">
            &copy; @DateTime.Now.Year <a>CoralCivet</a> - From NhomBay Team
        </p>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>

