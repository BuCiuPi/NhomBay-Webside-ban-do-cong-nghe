<div style="text-align:center">
    <span class="dot" onmouseover="currentSlide(1)"></span>
    <span class="dot" onmouseover="currentSlide(2)"></span>
    <span class="dot" onmouseover="currentSlide(3)"></span>
</div>

<div class="index-category">
    <h1 class="col-1"><b>CATEGORIES</b></h1>
    <div class="row">
        @foreach (var item in ViewBag.Types)
        {
            <div class="col-3 index-item">
                <img src="~/Content/Image/test1.png" class="img-responsive center-block" alt="Keybroad.img" />
                <h3><b>@item.name</b></h3>
            </div>
        }
    </div>
    <br />
    <br />
    <hr />
</div>


<div class="index-bestSeller">
    <h1 class="col-5 text-center"><b>BEST SELLER</b></h1>
    <div class="row">
        @foreach (CoralCivet_Technology_Ecommerce_Website.Models.CoralCivet.Product item in ViewBag.Products)
