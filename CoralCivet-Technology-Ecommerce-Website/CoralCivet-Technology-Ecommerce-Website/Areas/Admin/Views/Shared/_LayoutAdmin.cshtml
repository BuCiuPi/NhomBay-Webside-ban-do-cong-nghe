
<!DOCTYPE html>
<html lang="en">

<head>
    <title>@ViewBag.Title</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1.0, user-scalable=no">
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="description" content="Quantum Able Bootstrap 4 Admin Dashboard Template by codedthemes">
    <meta name="keywords" content="appestia, Responsive, Landing, Bootstrap, App, Template, Mobile, iOS, Android, apple, creative app">
    <meta name="author" content="codedthemes">

    <!-- Favicon icon -->
    <link rel="shortcut icon" href="~/Areas/Admin/Content/Layout/images/favicon.png" type="image/x-icon">
    <link rel="icon" href="~/Areas/Admin/Content/Layout/images/favicon.ico" type="image/x-icon">

    <!-- Google font-->
    <link href="https://fonts.googleapis.com/css?family=Ubuntu:400,500,700" rel="stylesheet">

    <!-- themify -->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/icon/themify-icons/themify-icons.css">

    <!-- iconfont -->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/icon/icofont/css/icofont.css">

    <!-- simple line icon -->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/icon/simple-line-icons/css/simple-line-icons.css">

    <!-- Required Fremwork -->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/plugins/bootstrap/css/bootstrap.min.css">

    <!-- Style.css -->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/css/main.css">
    <!-- Responsive.css-->
    <link rel="stylesheet" type="text/css" href="~/Areas/Admin/Content/Layout/css/responsive.css">
    <link href="~/Content/semantic.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.4.1.min.js"></script>
    <script src="~/Scripts/semantic.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <link href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" rel="stylesheet" />
    <link href="~/Content/fontawesome-free-5.15.3-web/css/all.min.css" rel="stylesheet" />
    <script src="~/Content/fontawesome-free-5.15.3-web/js/all.min.js"></script>

    <script src="https://cdn.ckeditor.com/ckeditor5/29.0.0/classic/ckeditor.js"></script>
    <style>
        .main-header-top > .navbar {
            margin-left: 600px;
        }
    </style>
</head>

<body class="sidebar-mini fixed">
    <div class="wrapper">
        <div class="loader-bg">
            <div class="loader-bar">
            </div>
        </div>
        <!-- Navbar-->
        <header class="main-header-top hidden-print">
            <a href="index.html" class="logo" style="width: 400px">
                <img src="~/Content/Image/logo.svg" style="width: 50px; height: 50px;float: left" class="img-fluid able-logo" />
                <span style="float: left">CoralCiviet - TECHNOLORY</span>
            </a>
            <nav class="navbar navbar-static-top">
                @*<a href="#!" data-toggle="offcanvas" class="sidebar-toggle"></a>  *@

                <div class="navbar-custom-menu">
                    <ul class="top-nav">
                        <li class="dropdown notification-menu">
                            <a href="#!" data-toggle="dropdown" aria-expanded="false" class="dropdown-toggle">
                                <i class="icon-bell"></i>
                                <span class="badge badge-danger header-badge">9</span>
                            </a>
                        </li>
                        <li class="pc-rheader-submenu ">
                            <a href="#!" class="drop icon-circle displayChatbox">
                                <i class="icon-bubbles"></i>
                                <span class="badge badge-danger header-badge">5</span>
                            </a>

                        </li>
                        <li class="pc-rheader-submenu">
                            <a href="#!" class="drop icon-circle" onclick="javascript:toggleFullScreen()">
                                <i class="icon-size-fullscreen"></i>
                            </a>

                        </li>
                        <li class="dropdown">
                            <a href="#!" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false" class="dropdown-toggle drop icon-circle drop-image">
                                <span><img class="img-circle " src="~/Areas/Admin/Content/Layout/images/avatar-1.png" style="width:40px;" alt="User Image"></span>
                                <span>ADMIN <i class=" icofont icofont-simple-down"></i></span>

                            </a>
                            <ul class="dropdown-menu settings-menu">
                                <li><a href="#!"><i class="icon-settings"></i> Cài đặt</a></li>
                                <li><a href="#"><i class="icon-user"></i> Tài khoản</a></li>
                                <li><a href="#"><i class="icon-envelope-open"></i>Tin nhắn của tôi</a></li>
                                <li class="p-0">
                                    <div class="dropdown-divider m-0"></div>
                                </li>
                                <li><a href="#"><i class="icon-lock"></i> Khóa nick</a></li>
                                <li><a href="login1.html"><i class="icon-logout"></i> Đăng xuất</a></li>

                            </ul>
                        </li>
                    </ul>

                </div>
            </nav>
        </header>
        @Html.Action("Menu", "ViewAdmin")
        <div class="content-wrapper">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </div>
    </div>
    @if (TempData["Notification"] != null)
    {
        <script>
    $(document).ready(function () {
        toastr.success('@TempData["Notification"].ToString()', 'Thông báo.', { timeOut: 5000 })
    })
        </script>
    }
    else if (TempData["NotificationError"] != null)
    {
        <script>
        toastr.error('@TempData["NotificationError"].ToString()', 'Thông báo.', { timeOut: 5000 })
        </script>
    }
    <script src="~/Areas/Admin/Content/Layout/plugins/jquery/dist/jquery.min.js"></script>
    <script src="~/Areas/Admin/Content/Layout/plugins/jquery-ui/jquery-ui.min.js"></script>
    <script src="~/Areas/Admin/Content/Layout/plugins/tether/dist/js/tether.min.js"></script>

    <!-- Required Fremwork -->
    <script src="~/Areas/Admin/Content/Layout/plugins/bootstrap/js/bootstrap.min.js"></script>

    <!-- waves effects.js -->
    <script src="~/Areas/Admin/Content/Layout/plugins/Waves/waves.min.js"></script>

    <!-- Scrollbar JS-->
    <script src="~/Areas/Admin/Content/Layout/plugins/jquery-slimscroll/jquery.slimscroll.js"></script>
    <script src="~/Areas/Admin/Content/Layout/plugins/jquery.nicescroll/jquery.nicescroll.min.js"></script>

    <!--classic JS-->
    <script src="~/Areas/Admin/Content/Layout/plugins/classie/classie.js"></script>

    <!-- notification -->
    <script src="~/Areas/Admin/Content/Layout/plugins/notification/js/bootstrap-growl.min.js"></script>

    <!-- custom js -->
    <script type="text/javascript" src="~/Areas/Admin/Content/Layout/js/main.min.js"></script>
    <script type="text/javascript" src="~/Areas/Admin/Content/Layout/pages/elements.js"></script>
    <script src="~/Areas/Admin/Content/Layout/js/menu.min.js"></script>
</body>

</html>
