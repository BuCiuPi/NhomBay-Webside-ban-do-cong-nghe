
@{
    ViewBag.Title = "Quản lý bài viết";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-lg-12">
                <h4>@ViewBag.Title</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow text-dark">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="basic-table.html">@ViewBag.Title</a>
                    </li>
                </ol>
            </div>
            <div class="col-lg-3">
                <b>Từ khóa</b>
                <input class="form-control" type="search" value="" id="" placeholder="Mã bài viết, tên bài viết, loại bài viết,...">
            </div>
            <div class="col-lg-3">
                <b>Ngày bắt đầu</b>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon bg-primary">
                        <span class="icofont icofont-ui-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                <b>Ngày kết thúc</b>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon bg-primary">
                        <span class="icofont icofont-ui-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                <b>Sắp xếp</b>
                <select class="form-control">
                    <option value="">Mặc định mới nhất</option>
                    <option>Cũ nhất</option>
                    <option>Theo tên</option>
                </select>
            </div>
            <div class="col-lg-12">
                Hiện tại có <b>10</b> bài viết
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-lg-6">
                <button type="button" class="btn btn-success waves-effect waves-light" data-toggle="modal" data-target="#addPost">
                    <i class="fas fa-plus-circle">&nbsp;</i> THÊM bài viết
                </button>
                <button type="button" class="btn btn-outline-danger waves-effect waves-light">
                    <i class="fas fa-trash">&nbsp;</i> THÙNG RÁC
                </button>
            </div>
            <br />
            <br />
            <div class="col-sm-12 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ẢNH BÀI VIẾT</th>
                            <th>Mã BÀI VIẾT</th>
                            <th>TÊN BÀI VIẾT</th>
                            <th>LOẠI BÀI VIẾT</th>
                            <th>LƯỢT XEM</th>
                            <th>TÌNH TRẠNG</th>
                            <th>NGÀY CẬP NHẬT</th>
                            <th>TÙY CHỌN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 1; i < 10; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    <img src="~/Images/Post/2010_goc-gaming-dep79.jpg" style="width: 100px; height: 100px" />
                                </td>
                                <td>POST-122</td>
                                <td>Làm sao để có chiếc máy tính đẹp?</td>
                                <td>Máy tính</td>
                                <td>100</td>
                                <td>
                                    <div class="label-main">
                                        <label class="label bg-success">Đang hoạt động</label>
                                    </div>
                                </td>
                                <td>09/07/2021</td>
                                <td>
                                    <a data-toggle="modal" data-target="#editPost"><i class="fa fa-edit">&nbsp;</i>Sửa</a> |
                                    <a data-toggle="modal" data-target="#deletePost"><i class="fa fa-trash">&nbsp;</i>Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups" style="float: right">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button type="button" class="btn btn-success">1</button>
                        <button type="button" class="btn btn-success">2</button>
                        <button type="button" class="btn btn-success">3</button>
                        <button type="button" class="btn btn-success">4</button>
                    </div>
                </div>
            </div>
            <!--Thêm bài viết-->
            <div class="modal fade" id="addPost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="max-width: 1060px;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thêm bài viết</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="form-control-label">Hình ảnh</label>
                                <input type="file" class="form-control" name="Image">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mã bài viết</label>
                                <input type="text" class="form-control" name="Code" placeholder="Vui lòng nhập mã bài viết">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Tên bài viết</label>
                                <input type="text" class="form-control" name="Name" placeholder="Vui lòng nhập tên bài viết">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Loại bài viết</label>
                                <select class="form-control" name="Category">
                                    <option>Máy tính</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Lượt xem</label>
                                <input name="View" value="0" type="number" class="form-control" placeholder="Vui lòng nhập lượt xem (Mặc định là 0)">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mô tả</label>
                                <textarea class="form-control" name="Describe" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Nội dung</label>
                                <textarea class="form-control" name="Content" id="editorAdd" rows="4"></textarea>
                            </div>
                            <script>
                                ClassicEditor
                                    .create(document.querySelector('#editorAdd'))
                                    .catch(error => {
                                        console.error(error);
                                    });
                            </script>
                            <fieldset class="form-group">
                                <label class="form-control-label">Tình trạng</label>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" valu="true" checked>
                                        Hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" value="false">
                                        Không hoạt động
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-primary"><i class="fas fa-save">&nbsp;</i> Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Sửa bài viết-->
            <div class="modal fade" id="editPost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="max-width: 1060px;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Sửa bài viết - Làm sao để có chiếc máy tính đẹp?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="form-control-label">Hình ảnh</label>
                                <input type="file" class="form-control" name="Image">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mã bài viết</label>
                                <input type="text" class="form-control" name="Code" value="POST-122" placeholder="Vui lòng nhập mã bài viết">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Tên bài viết</label>
                                <input type="text" value="Làm sao để có chiếc máy tính đẹp?" class="form-control" name="Name" placeholder="Vui lòng nhập tên bài viết">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Loại bài viết</label>
                                <select class="form-control" name="Category">
                                    <option>Máy tính</option>
                                </select>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Lượt xem</label>
                                <input name="View" value="100" type="text" class="form-control" placeholder="Vui lòng nhập lượt xem (Mặc định là 0)">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mô tả</label>
                                <textarea class="form-control" name="Describe" rows="4">Mô tả đẹp</textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Nội dung</label>
                                <textarea class="form-control" name="Content" id="editorEdit" rows="4">Trang trí là đẹp</textarea>
                            </div>
                            <script>
                                ClassicEditor
                                    .create(document.querySelector('#editorEdit'))
                                    .catch(error => {
                                        console.error(error);
                                    });
                            </script>
                            <fieldset class="form-group">
                                <label class="form-control-label">Tình trạng</label>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" valu="true" checked>
                                        Hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" value="false">
                                        Không hoạt động
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-primary"><i class="fas fa-save">&nbsp;</i> Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Xóa bài viết-->
            <div class="modal fade" id="deletePost" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xóa bài viết - Làm sao để có chiếc máy tính đẹp?</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc muốn xóa bài viết này??
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-times">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-danger"><i class="fa fa-trash">&nbsp;</i> Chắc chắn</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .ck.ck-editor__editable_inline > :first-child {
        margin-top: var(--ck-spacing-large);
        height: 300px;
    }
</style>

