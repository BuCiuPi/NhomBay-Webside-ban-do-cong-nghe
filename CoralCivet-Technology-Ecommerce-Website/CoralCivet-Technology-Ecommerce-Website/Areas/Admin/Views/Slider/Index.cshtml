
@{
    ViewBag.Title = "Quản lý ảnh bìa";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}
<br />
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-lg-12">
                <h4>@ViewBag.Title</h4>
                <ol class="breadcrumb breadcrumb-title breadcrumb-arrow text-dark">
                    <li class="breadcrumb-item">
                        <a href="index.html">
                            <i class="icofont icofont-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a href="basic-table.html">@ViewBag.Title</a>
                    </li>
                </ol>
            </div>
            <div class="col-lg-3">
                <b>Từ khóa</b>
                <input class="form-control" type="search" value="" id="" placeholder="Tên ảnh bìa,Nội dung,...">
            </div>
            <div class="col-lg-3">
                <b>Ngày bắt đầu</b>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon bg-primary">
                        <span class="icofont icofont-ui-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                <b>Ngày kết thúc</b>
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" />
                    <span class="input-group-addon bg-primary">
                        <span class="icofont icofont-ui-calendar"></span>
                    </span>
                </div>
            </div>
            <div class="col-lg-3">
                <b>Sắp xếp</b>
                <select class="form-control">
                    <option value="">Mặc định mới nhất</option>
                    <option>Cũ nhất</option>
                    <option>Theo tên</option>
                </select>
            </div>
            <div class="col-lg-12">
                Hiện tại có <b>10</b> ảnh bìa
            </div>
        </div>
    </div>
</div>
<div class="card">
    <div class="card-block">
        <div class="row">
            <div class="col-lg-6">
                <button type="button" class="btn btn-success waves-effect waves-light" data-toggle="modal" data-target="#addBanner">
                    <i class="fas fa-plus-circle">&nbsp;</i> THÊM ẢNH BÌA
                </button>
                <button type="button" class="btn btn-outline-danger waves-effect waves-light">
                    <i class="fas fa-trash">&nbsp;</i> THÙNG RÁC
                </button>
            </div>
            <br />
            <br />
            <div class="col-sm-12 table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>ẢNH BÌA</th>
                            <th>TÊN ẢNH BÌA</th>
                            <th>MÔ TẢ</th>
                            <th>NGÀY CẬP NHẬT</th>
                            <th>TÙY CHỌN</th>
                        </tr>
                    </thead>
                    <tbody>
                        @for (var i = 1; i < 10; i++)
                        {
                            <tr>
                                <td>@i</td>
                                <td>
                                    <img src="~/Images/Banner/banner.jpg" style="width: 200px; height: 100px" />
                                </td>
                                <td>Ưu đãi mua máy tính và linh kiện</td>
                                <td>Banner màu đỏ quảng cáo</td>
                                <td>09/07/2021</td>
                                <td>
                                    <a data-toggle="modal" data-target="#editBanner"><i class="fa fa-edit">&nbsp;</i>Sửa</a> |
                                    <a data-toggle="modal" data-target="#deleteBanner"><i class="fa fa-trash">&nbsp;</i>Xóa</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="btn-toolbar mb-3" role="toolbar" aria-label="Toolbar with button groups" style="float: right">
                    <div class="btn-group mr-2" role="group" aria-label="First group">
                        <button type="button" class="btn btn-success">1</button>
                        <button type="button" class="btn btn-success">2</button>
                        <button type="button" class="btn btn-success">3</button>
                        <button type="button" class="btn btn-success">4</button>
                    </div>
                </div>
            </div>
            <!--Thêm ảnh bìa-->
            <div class="modal fade" id="addBanner" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="max-width: 1060px;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Thêm ảnh bìa</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="form-control-label">Ảnh bìa</label>
                                <input type="file" class="form-control" name="Image">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Tên ảnh bìa</label>
                                <input type="text" class="form-control" name="BannerName" placeholder="Vui lòng nhập tên ảnh bìa">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mô tả</label>
                                <textarea class="form-control" name="Describe" rows="4"></textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Link dẫn trang</label>
                                <input type="text" class="form-control" name="Link" placeholder="Link dẫn trang">
                            </div>
                            <fieldset class="form-group">
                                <label class="form-control-label">Tình trạng</label>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" valu="true" checked>
                                        Hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" value="false">
                                        Không hoạt động
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-primary"><i class="fas fa-save">&nbsp;</i> Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Sửa ảnh bìa-->
            <div class="modal fade" id="editBanner" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog" style="max-width: 1060px;">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Sửa ảnh bìa - Ưu đãi mua máy tính và linh kiện</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            <div class="form-group">
                                <label class="form-control-label">Ảnh bìa</label>
                                <input type="file" class="form-control" name="Image">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Tên ảnh bìa</label>
                                <input type="text" class="form-control" value="Ưu đãi mua máy tính và linh kiện" name="BannerName" placeholder="Vui lòng nhập tên ảnh bìa">
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Mô tả</label>
                                <textarea class="form-control" name="Describe" rows="4">Banner màu đỏ quảng cáo</textarea>
                            </div>
                            <div class="form-group">
                                <label class="form-control-label">Link dẫn trang</label>
                                <input type="text" class="form-control" name="Link" placeholder="Link dẫn trang" value="/Admin/Slider">
                            </div>
                            <fieldset class="form-group">
                                <label class="form-control-label">Tình trạng</label>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" valu="true" checked>
                                        Hoạt động
                                    </label>
                                </div>
                                <div class="form-check">
                                    <label class="form-check-label">
                                        <input type="radio" class="form-check-input" name="Active" value="false">
                                        Không hoạt động
                                    </label>
                                </div>
                            </fieldset>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-danger" data-dismiss="modal"><i class="fa fa-times-circle">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-primary"><i class="fas fa-save">&nbsp;</i> Lưu</button>
                        </div>
                    </div>
                </div>
            </div>
            <!--Xóa ảnh bìa-->
            <div class="modal fade" id="deleteBanner" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="exampleModalLabel">Xóa ảnh bìa - Ưu đãi mua máy tính và linh kiện</h5>
                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                <span aria-hidden="true">&times;</span>
                            </button>
                        </div>
                        <div class="modal-body">
                            Bạn có chắc muốn xóa ảnh bìa này??
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-default" data-dismiss="modal"><i class="fas fa-times">&nbsp;</i> Đóng</button>
                            <button type="button" class="btn btn-danger"><i class="fa fa-trash">&nbsp;</i> Chắc chắn</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

